{
  "name": "workspace",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && webpack --mode=production",
    "build-electron": "tsc main.ts --outDir dist && tsc preload.ts --outDir dist",
    "build-react": "webpack --mode=production",
    "dev": "concurrently \"npm run dev-react\" \"npm run dev-electron\"",
    "dev-react": "webpack serve --mode=development",
    "dev-electron": "npm run build-electron && NODE_ENV=development electron . --no-sandbox --disable-gpu",
    "start": "electron . --no-sandbox --disable-gpu",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "electron": "^37.2.5",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
